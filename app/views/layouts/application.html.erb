<!DOCTYPE html>
<html>
<head>
  <title>BmiForWorld</title>
  <link href='https://fonts.googleapis.com/css?family=Raleway:400,700,600,800,500' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% if user_signed_in? %>
		<%= render 'common/navbar' %>
		<%= notice_message %>
		<%= yield %>
		<% else %>
	<%= yield %>
	<% end %>
<%= render 'common/footer' %>
</body>
</html>
