<div id="show">
	<h2 class="cf"><%= @school.city.name + @school.distance.name + @school.name %></h2>  
	
	<%= link_to edit_school_path(@school), class: "icon"  do %>
		<i class="fa fa-pencil-square-o fa-lg"></i>
	<% end %>
	
	<hr>
	<%= link_to new_school_grade_path(@school), class: "icon" do %>
		<i class="fa fa-plus-circle fa-lg"></i>
	<% end %>

	<div class="grade_list">
		<% @grades.each do |grade| %>
			<h4><%= link_to grade.name, school_grade_path(@school, grade) %></h4> <hr>
		<% end %>
	</div>


</div>